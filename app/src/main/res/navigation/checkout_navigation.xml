<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkout_navigation"
    app:startDestination="@id/addressFragment">

    <fragment
        android:id="@+id/addressFragment"
        android:name="com.app.kiranachoice.views.checkout_product.AddressFragment"
        android:label="Checkout"
        tools:layout="@layout/fragment_address" >
        <action
            android:id="@+id/action_addressFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.app.kiranachoice.views.checkout_product.PaymentFragment"
        android:label="Payment"
        tools:layout="@layout/fragment_payment" />
</navigation>